
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Font -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600%7CUbuntu:300,400,500,700" rel="stylesheet">

    <!-- CSS -->
    <link rel="stylesheet" href="/Content/css/bootstrap-reboot.min.css">
    <link rel="stylesheet" href="/Content/css/bootstrap-grid.min.css">
    <link rel="stylesheet" href="/Content/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/Content/css/jquery.mCustomScrollbar.min.css">
    <link rel="stylesheet" href="/Content/css/nouislider.min.css">
    <link rel="stylesheet" href="/Content/css/ionicons.min.css">
    <link rel="stylesheet" href="/Content/css/plyr.css">
    <link rel="stylesheet" href="/Content/css/photoswipe.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/jquery-ui.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/Content/css/main.css">

    <!-- Favicons -->
    <link rel="icon" type="image/png" href="icon/favicon-32x32.png" sizes="32x32">

    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="author" content="Dmitry Volkov">
    <title>Đặt vé xem phim</title>
    <style>
        #Register .sign__input {
            width: 338px;
        }

        #Register .sign__group .sign__input[type="date"] {
            color: rgba(255,255,255,0.5);
        }

            #Register .sign__group .sign__input[type="date"]:hover {
                cursor: pointer;
            }

        .accept-policy {
            border: 2px solid #fff;
        }

        .text-danger {
            font-size: 16px;
        }

        .sign__form {
            align-items: flex-start;
        }
    </style>
</head>
<body class="body">

    <div class="sign section--bg" data-bg="img/section/section.jpg" id="Register">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="sign__content">
                        <!-- registration form -->
                        <form action="#" class="user__info__form">
                            <a class="user__info__btn--home" href="/home-page" onclick="">X</a>
                            <h3 class="user__info__title">Thông tin người dùng</h3>

                            <div class="user__info__group">
                                <label for="user__info__name">Tên đăng nhập</label>
                                <input v-model="username" name="user__info__name" type="text" class="user__info__input" placeholder="Nhập tên" readonly>
                                <div class="text-danger"> {{error_username}}</div>
                            </div>

                            <div class="user__info__group">
                                <label for="user__info__name">Họ tên</label>
                                <input v-model="hoten" name="user__info__name" type="text" class="user__info__input" placeholder="Nhập tên">
                                <div class="text-danger"> {{error_hoten}}</div>
                            </div>

                            <div class="user__info__group">
                                <label for="user__info__birthday">Ngày sinh</label>
                                <input v-model="ngaysinh" name="user__info__birthday" type="text" class="user__info__input" placeholder="Nhập ngày sinh">
                            </div>

                            <div class="user__info__group">
                                <label for="user__info__phone">Số điện thoại</label>
                                <input v-model="sdt" name="user__info__phone" type="text" class="user__info__input" placeholder="Nhập số điện thoại">
                                <div class="text-danger"> {{error_sdt}}</div>
                            </div>

                            <div class="user__info__group">
                                <label for="user__info__phone">Địa chỉ</label>
                                <input v-model="diachi" name="user__info__phone" type="text" class="user__info__input" placeholder="Nhập số điện thoại">
                                <div class="text-danger"> {{error_diachi}}</div>
                            </div>

                            <div class="user__info__group">
                                <label for="user__info__password">Mật khẩu</label>
                                <input v-model="password" name="user__info__password" type="password" class="user__info__input" placeholder="Nhập mật khẩu">
                                <div class="text-danger"> {{error_password}}</div>
                            </div>

                            <div class="user__info__group">
                                <label for="user__info__password--confirm">Xác nhận mật khẩu</label>
                                <input v-model="confirm_pass" name="user__info__password--confirm" type="password" class="user__info__input" placeholder="Nhập xác nhận mật khẩu">
                                <div class="text-danger"> {{error_confirm_pass}}</div>
                            </div>

                            <button class="user__info__btn" type="button" onclick="updateInfoUser()">Cập nhật thông tin</button>
                        </form>
                        <!-- registration form -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JS -->
    <script src="/Content/js/jquery-3.3.1.min.js"></script>
    <script src="/Content/js/bootstrap.bundle.min.js"></script>
    <script src="/Content/js/owl.carousel.min.js"></script>
    <script src="/Content/js/jquery.mousewheel.min.js"></script>
    <script src="/Content/js/jquery.mCustomScrollbar.min.js"></script>
    <script src="/Content/js/wNumb.js"></script>
    <script src="/Content/js/nouislider.min.js"></script>
    <script src="/Content/js/plyr.min.js"></script>
    <script src="/Content/js/jquery.morelines.min.js"></script>
    <script src="/Content/js/photoswipe.min.js"></script>
    <script src="/Content/js/photoswipe-ui-default.min.js"></script>
    <script src="/Content/js/main.js"></script>
    <script src="~/Scripts/vue.js"></script>
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/Account/Register.js"></script>
</body>

</html>

<script>
    $(document).ready(function () {
        $('#datepicker').datepicker({
            dateFormat: "dd/mm/yy",
            changeMonth: true,
            changeYear: true
        })
    })


    function getBirthday() {
        var birthday = $("#datepicker").val();
        vmRegister.ngaysinh = birthday;
    }
</script>

