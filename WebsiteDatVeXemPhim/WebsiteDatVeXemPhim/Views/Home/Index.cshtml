                data: modal,
                url: "/api/KOL_CampaignApi/GetKOL_Campaign",
                type: 'POST',
                dataType: 'json',
                contentType: "application/x-www-form-urlencoded; charset=UTF-8"
            }).then(res => {
                self.list = res.data.list;
                self.pageCount = res.data.PageCount;
                self.pageView = res.data.PageView;
                self.RoleId = res.data.RoleId;
                self.CountAllCampaign = res.data.CountAllCampaign;
                HiddenLoader();
                $("#ListKOL_Campaign").css("display", "block");
                setTimeout(function () {
                    $(function () {
                        $('[data-toggle="tooltip"]').tooltip(
                            {
                                container: 'body'
                            }
                        );
                    });
                });
            });
        },
</script>
